<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/userProfileButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_margin="20sp"
            android:background="@drawable/three_dots" />

        <TextView
            android:id="@+id/helloText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50px"
            android:text="Hello"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="648dp"

        android:background="@drawable/white_rounded_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:text="Add entry"
            android:textColor="@color/main_blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/glucoseRecordButton"
                android:layout_width="50px"
                android:layout_height="170px"
                android:layout_marginLeft="150px"
                android:layout_marginTop="70px"

                android:layout_marginRight="70px"
                android:layout_marginBottom="70px"
                android:layout_weight="1"
                android:background="@drawable/glucose_blue" />

            <ImageButton
                android:id="@+id/activityRecordButton"
                android:layout_width="50px"
                android:layout_height="170px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="70px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="70px"
                android:layout_weight="1"
                android:background="@drawable/activity_blue" />

            <ImageButton
                android:id="@+id/foodRecordButton"
                android:layout_width="50px"
                android:layout_height="170px"
                android:layout_marginLeft="70px"
                android:layout_marginTop="70px"
                android:layout_marginRight="150px"
                android:layout_marginBottom="70px"
                android:layout_weight="1"
                android:background="@drawable/food_blue" />


        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="4px"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/todaysRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10sp"
            android:text="Records"
            android:textColor="@color/main_blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="375dp"

            android:padding="15sp" />


    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/medium_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10px">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:background="@drawable/home_grey"
            android:layout_margin="60px"/>

        <ImageButton
            android:id="@+id/statsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:background="@drawable/statistics_blue"
            android:layout_margin="60px"/>

        <ImageButton
            android:id="@+id/calcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:background="@drawable/calculator_blue"
            android:layout_margin="60px"/>

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:background="@drawable/info_blue"
            android:layout_margin="60px"/>


    </LinearLayout>


</LinearLayout>